{% extends 'layout.njk' %}

{% block head %}
	<title>{{ recipe.title }}</title>
{% endblock head %}

{% block content %}
	<main class="recipes">
		<div class="recipe">
			<div class="recipe__image-container">
				<img src="{{ recipe.image }}" alt="{{ recipe.title }}">
			</div>

			<div class="recipe__content">
				<p>{{ recipe.title }}</p>
			</div>

			<div class="recipe__by">
				<p>por {{ recipe.author }}</p>
			</div>
		</div>
	</main>

{% endblock content %}
