{% extends 'layout_adm.njk' %}

{% block head %}
	<title>Foodfy - {{ recipe.title }}</title>
{% endblock head %}

{% block content %}
	<main>
		<div class="about-recipe">
		<div class="about-recipe_head">
			<h1>Receita: {{ recipe.title }}</h1>			
			<a href="/admin/recipe/{{ id }}/edit">Editar receita</a>
		</div>
			<div class="about-recipe__image-container">
				<img src="{{ recipe.image }}" alt="{{ recipe.title }}">
				<h1>{{ recipe.title }}</h1>
				<p>por {{ recipe.author }}</p>
			</div>
			<div class="about-recipe__content">
			
				<h2>Ingredientes <span class='span'></span> </h2>
				<div class="data show">
					<ul>
						{% for ingredient in recipe.ingredients %}
							<li> {{ ingredient }}; </li>
						{% endfor %}
					</ul>
				</div>
			</div>
			<div class="about-recipe__content">
				<h2>Modo de preparo <span class='span'></span> </h2>
				<div class="data show">
					<ul>
						{% for preparation in recipe.preparation %}
							<li> {{ preparation }} </li>
						{% endfor %}
					</ul>
				</div>
			</div>

			<div class="about-recipe__content">
				<h2>Informações Adicionais <span class='span'></span> </h2>
				<div class="data show">
					<p class="info"> {{ recipe.information }} </p>				
				</div>
			</div>
		</div>
	</main>

{% endblock content %}
