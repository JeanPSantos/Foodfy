<div class="item">
	<div>Título da receita</div>
	<div>
		<input type="text" name="title" value="{{ recipe.title }}">
	</div>
</div>

<div class="item">
	<div>Autor</div>
	<div>
		<input type="text" name="author" value="{{ recipe.author }}">
	</div>
</div>

<div class="item">
	<div>Imagem da receita</div>
	<div>
		<input type="url" name="image_url" value="{{ recipe.image }}" placeholder="https://">
	</div>
</div>

<div class="item" id="ingredients">
	<div>Ingredientes</div>
	{% for ingredient in recipe.ingredients %}
		<div class="ingredient">
			<input type="text" name="ingredients[]" value="{{ ingredient }}">
		</div>
		{% else %}
		<div class="ingredient">
			<input type="text" name="ingredients[]" value="" placeholder="Novo ingrediente">
		</div>
	{% endfor %}
</div>

<div class="add">
	<button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
</div>

<div class="item" id="steps">
	<div>Modo de preparo</div>
	{% for step in recipe.preparation %}
		<div class="step">
			<input type="text" name="preparation[]" value="{{ step }}">
		</div>
		{% else %}
		<div class="step">
			<input type="text" name="preparation[]" value="">
		</div>
	{% endfor %}
</div>

<div class="add">
	<button type="button" class="add-step">Adicionar novo passo</button>
</div>

<div class="item">
	<div>Informações adicionais</div>
	<div>
		<textarea name="info_add" rows="8">{{ recipe.information }}</textarea>
	</div>
</div>